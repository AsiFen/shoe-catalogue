</nav>

<div class="flex mt-8 flex-row">
  <div class="bg-white shadow-lg rounded-lg p-2 w-full md:w-2/4 lg:w-1/2">
    {{#each cartShoes}}
    <div class="flex items-center mb-4">
      <img src={{this.img_url}} alt="Shoe Image" class="rounded-md mr-4">
      <div class="flex flex-col">
        <h2 class="text-xl font-bold mb-2">{{this.brand}}</h2>
        <p class="text-gray-600 mb-2">{{this.shoe_name}}</p>
        <p class="text-gray-800 text-lg mb-2">Price: ZAR{{this.price}}</p>
        <div class="flex justify-between items-center">
          <label for="quantity" class="text-gray-800 mr-2">Quantity:</label>
          <form action="/cart" method="get">
            <input type="number" id="quantity" name="quantity" value="1" class="w-16 border rounded-md p-2">
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="bg-white shadow-lg rounded-lg p-2 md:w-2/4 lg:w-1/2">
    <h2 class="text-4xl text-center underline">Summary</h2>
    {{!-- <p class="text-center">Subtotal: UNDER-CONSTRUCTION</p> --}}
    <p class="text-center">Total:R {{cartPrice}} </p>
    <button class="bg-red-500 text-white px-4 py-12 rounded-md mx-auto">Clear Cart</button>
  </div>
</div>