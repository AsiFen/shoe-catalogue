<div class="flex justify-center items-center mt-8">
  {{#each shoes}}
  <div class="bg-white shadow-lg rounded-lg p-8 w-full md:w-3/4 lg:w-1/2 flex">
    <div class="w-1/2 pr-4">
      <img src={{this.img_url}} alt="Shoe Image" class="w-full h-auto rounded-md">
    </div>

    <div class="w-1/2 pl-4">

      <h2 class="text-2xl font-bold mb-4">{{this.brand}}</h2>
      <p class="text-gray-600 mb-4">{{this.shoe_name}}</p>

      <p class="text-gray-800 text-lg mb-4">Price: ZAR{{this.price}}</p>
      <div class="mb-4">
        <label for="quantity" class="text-gray-800">Quantity:</label>
        <input type="number" id="quantity" name="quantity" value="1" class="w-16 border rounded-md p-2 ml-2">
      </div>

      <div class="flex justify-between items-center">
        <p class="text-gray-800 font-bold">Total: {{this.total}}</p>
        <button class="bg-red-500 text-white px-4 py-2 rounded-md">Clear Cart</button>
      </div>
    </div>

  </div>
  {{/shoes}}
</div>