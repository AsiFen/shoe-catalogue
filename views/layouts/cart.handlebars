
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    thead th,
    tbody td {
      border: 1px solid #ddd;
      padding: 8px;
    }

    .total {
      text-align: right;
    }

    .button {
      background-color: #000;
      color: #fff;
      padding: 8px 16px;
      border: none;
      cursor: pointer;
    }

    .buy-button {
      background-color: #000;
      color: #fff;
      padding: 8px 16px;
      border: none;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Cart</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      {{#each shoes}}
        <tr>
          <td><img src="{{img_url}}" width="100px" height="100px"></td>
          <td>{{shoe_name}}</td>
          <td>{{price}}</td>
          <td>
            <button onclick="increaseQuantity({{id}})" class="button">+</button>
            <input type="number" id="quantity-{{id}}" value="{{quantity}}">
            <button onclick="decreaseQuantity({{id}})" class="button">-</button>
          </td>
          <td class="total">{{total}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <p>Total: {{grandTotal}}</p>

  <button onclick="buy()" class="buy-button">Buy</button>
<body>
    
