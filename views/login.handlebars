
<section class="bg-gray-100 h-screen flex justify-center">

    <div class="max-w-md w-full bg-white p-8 shadow-md rounded-md">
        <h2 id="formTitle" class="text-2xl font-semibold mb-6">Login</h2>

        <!-- Login Form -->
        <form id="loginForm" action="/login" method="post">
            <div class="mb-4">
                <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Username:</label>
                <input type="text" id="username" name="username" class="w-full px-3 py-2 border rounded-md">
            </div>

            <div class="mb-6">
                <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-md">
            </div>

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md">Login</button>

                <div class="mt-6">
            <p class="text-sm">
                Create Account?
                <a href="#" id="toggleFormLink" class="text-blue-500">Sign Up</a>
            </p>
        </div>
        </form>

        <!-- Signup Form (Initially Hidden) -->
        <form id="signupForm" class="hidden" action="/signup" method="post">
            <!-- Include signup form fields here -->
            <div class="mb-4">
                <label for="signupUsername" class="block text-gray-700 text-sm font-bold mb-2">Username:</label>
                <input type="text" id="signupUsername" name="signupUsername" class="w-full px-3 py-2 border rounded-md">
            </div>

            <div class="mb-6">
                <label for="signupPassword" class="block text-gray-700 text-sm font-bold mb-2">Password:</label>
                <input type="password" id="signupPassword" name="signupPassword"
                    class="w-full px-3 py-2 border rounded-md">
            </div>

            <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded-md">Sign Up</button>

  <div class="mt-6">
            <p class="text-sm">
                Have an Account?
                <a href="login" id="toggleFormLink" class="text-blue-500">Log In</a>
            </p>
        </div>
        </form>

    </div>

    <script>
        // JavaScript to toggle between login and signup forms
        const loginForm = document.getElementById('loginForm');
        const signupForm = document.getElementById('signupForm');
        const formTitle = document.getElementById('formTitle');
        const toggleFormLink = document.getElementById('toggleFormLink');

        toggleFormLink.addEventListener('click', function (event) {
            event.preventDefault();
            // Toggle the visibility of login and signup forms
            loginForm.classList.toggle('hidden');
            signupForm.classList.toggle('hidden');

            // Update form title based on the active form
            if (loginForm.classList.contains('hidden')) {
                formTitle.textContent = 'Sign Up';
            } else {
                formTitle.textContent = 'Login';
            }
        });

    </script>

</section>
